{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@breathe-mail/email": ["packages/lib/email/src/index.ts"],
      "@breathe-mail/email/*": ["packages/lib/email/src/*"]
    }
  },
  "include": ["packages", "apps"],
  "exclude": ["node_modules", "dist", ".next"]
}
